    <!--Makes sure the right data types go into the categories and removes the wrong ones-->
    <script>
        
        
        // Wrap your existing script inside the DOMContentLoaded event
        document.addEventListener('DOMContentLoaded', () => {
            const raceInput = document.getElementById('raceInput');
            const dndClassInput = document.getElementById('dndClassInput')
            const specializationInput = document.getElementById('specializationInput')
            const optionsContainer = document.getElementById('optionsContainer');
            const options = document.querySelectorAll('.dropdown-option');

            // Show dropdown when input is focused
            raceInput.addEventListener('focus', () => {
                console.log("Race input field focused, showing dropdown.");
                optionsContainer.style.display = 'block'; // Display dropdown when input is focused
            });

            // Hide dropdown if clicking outside of the dropdown and input
            document.addEventListener('click', (event) => {
                if (!raceInput.contains(event.target) && !optionsContainer.contains(event.target)) {
                    console.log("Clicked outside the dropdown. Hiding dropdown.");
                    optionsContainer.style.display = 'none'; // Hide dropdown if clicking outside
                }
            });

            // Add click event to each option to update the input field
            options.forEach(option => {
                option.addEventListener('click', () => {
                    const optionText = option.textContent.trim(); // Get the selected option's text
                    console.log("Dropdown option clicked:", optionText); // Log the clicked option's text
                    raceInput.value = optionText; // Replace input field with the selected option's text
                    optionsContainer.style.display = 'none'; // Hide dropdown after selection
                    raceInput.focus(); // Focus back on the input field
                });
            });
            document.getElementById('firstNameInput').addEventListener('input', function(e) {
                this.value = this.value.replace(/[0-9]/g, ''); // Remove any numbers
            });
            document.getElementById('lastNameInput').addEventListener('input', function(e) {
